# screen locker - 5min (300s) to dim - 6min (+60s) to screensaver - 7 min (+60s) to suspend 
exec_always xidlehook --not-when-audio \
                      --timer 300 'light -G > /home/maciej/.curlight ; light -S 10' 'cat ~/.curlight | xargs light -S' \
                      --timer 60 'light -S 30 ;feh -Y -F /home/maciej/Obrazy/catppuccin_3.jpg' 'cat ~/.curlight | xargs light -S ; pgrep feh | xargs kill' \
                      --timer 120 'cat /home/maciej/.curlight | xargs light -S' '' \
                      --timer 1 'systemctl suspend' '' \
                      --timer 1 'pgrep feh | xargs kill' ''


